{{- if eq .chezmoi.os "linux" -}}
#!/usr/bin/env bash
set -eufo pipefail

printf "INFO: installing linux packages\n"

{{ $packages := list
     "python3-pip"
     "python3-venv" -}}

{{ if not .gitpod -}}
  {{ $packages = concat $packages (list
       "wget"
       "gnupg2"
       "gnupg-agent"
       "dirmngr"
       "cryptsetup"
       "scdaemon"
       "pcscd"
       "secure-delete"
       "hopenpgp-tools"
       "yubikey-personalization"
       "rofi"
       "deja-dup"
       "flameshot") -}}
{{ end -}}

sudo apt-get update
sudo apt-get install -y {{ $packages | join " " }}
{{- end }}
