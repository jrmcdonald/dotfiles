set -eufo pipefail

. "$(chezmoi source-path)/../lib/log.sh"

{{ $brews := list
      "awscli"
      "bat"
      "cfn-lint"
      "curl"
      "direnv"
      "docker-credential-helper-ecr"
      "exa"
      "fd"
      "git"
      "git-cliff"
      "git-delta"
      "glances"
      "helm"
      "jenv"
      "jq"
      "kubernetes-cli"
      "kubectx"
      "liquibase"
      "maven"
      "neovim"
      "nvm"
      "ripgrep"
      "skaffold"
      "step"
      "tmux"
      "yq"
      "z"
      "mcfly"
      "k9s" -}}
	  
log::info "installing common brews"
brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
EOF
log::info::complete
{{ end -}}
